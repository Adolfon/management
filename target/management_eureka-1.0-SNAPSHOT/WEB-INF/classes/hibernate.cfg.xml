<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">hola</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/project_db4</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <!--<property name="hibernate.hbm2ddl.auto">create</property>  trying this one -->
        <mapping resource="co/jp/eureka/persistance/TzPrjNeedsSkill.hbm.xml" />
        <mapping resource="co/jp/eureka/persistance/MaCustomer.hbm.xml" />
        <mapping resource="co/jp/eureka/persistance/TzPrjNeedsEngineer.hbm.xml" />
        <mapping resource="co/jp/eureka/persistance/MaSkillcategory.hbm.xml" />
        <mapping resource="co/jp/eureka/persistance/MaSkillitem.hbm.xml" />
        <mapping resource="co/jp/eureka/persistance/TzPrj.hbm.xml" />
        <mapping resource="co/jp/eureka/persistance/MaEngineerkbn.hbm.xml" />
        <mapping resource="co/jp/eureka/persistance/MaProjectkbn.hbm.xml" />
    </session-factory>
</hibernate-configuration>
